<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="CircularImageView">
        <attr name="civ_border" format="boolean"/>
        <attr name="civ_border_width" format="dimension"/>
        <attr name="civ_border_color" format="color"/>
        <attr name="civ_shadow" format="boolean"/>
        <attr name="civ_shadow_color" format="color"/>
        <attr name="civ_shadow_radius" format="float"/>
    </declare-styleable>

    <declare-styleable name="TextViewCustomFont">
        <attr name="fontName"/>
    </declare-styleable>

    <declare-styleable name="EditTextCustomFont">
        <attr name="fontName"/>
    </declare-styleable>

    <declare-styleable name="ButtonCustomFont">
        <attr name="fontName"/>
    </declare-styleable>

    <declare-styleable name="RadioButtonCustomFont">
        <attr name="fontName"/>
    </declare-styleable>

    <declare-styleable name="CheckBoxCustomFont">
        <attr name="fontName"/>
    </declare-styleable>

    <attr name="fontName" format="enum">
        <enum name="IRANSansMobile_UltraLight" value="1"/>
        <enum name="IRANSansMobile_Light" value="2"/>
        <enum name="IRANSansMobile_Medium" value="3"/>
        <enum name="IRANSansMobile_Bold" value="4"/>
    </attr>

    <declare-styleable name="IconSwitch">
        <attr name="isw_icon_left" format="reference" />
        <attr name="isw_icon_right" format="reference" />

        <attr name="isw_icon_size" format="dimension" />

        <attr name="isw_background_color" format="color" />
        <attr name="isw_thumb_color_left" format="color" />
        <attr name="isw_thumb_color_right" format="color" />
        <attr name="isw_inactive_tint_icon_left" format="color" />
        <attr name="isw_inactive_tint_icon_right" format="color" />
        <attr name="isw_active_tint_icon_left" format="color" />
        <attr name="isw_active_tint_icon_right" format="color" />

        <attr name="isw_default_selection" format="enum">
            <enum name="left" value="0" />
            <enum name="right" value="1" />
        </attr>
    </declare-styleable>

    <declare-styleable name="DiagonalLayout">
        <attr name="diagonal_angle" format="integer" />
        <attr name="diagonal_handleMargins" format="boolean"/>
        <attr name="diagonal_position" format="enum">
            <enum name="left" value="1" />
            <enum name="right" value="2" />
            <enum name="bottom" value="4" />
            <enum name="top" value="8"/>
        </attr>
        <attr name="diagonal_direction" format="enum">
            <enum name="left" value="1" />
            <enum name="right" value="2" />
        </attr>
    </declare-styleable>

    <declare-styleable name="CallSliderView">
        <attr name="CallSliderView_backgroundColor" format="color" />
        <attr name="CallSliderView_progressBackgroundColor" format="color" />
        <attr name="CallSliderView_textSize" format="dimension" />
        <attr name="CallSliderView_text" format="string" />
        <attr name="CallSliderView_Left_Text" format="string"/>
        <attr name="CallSliderView_Left_BackgroundColor" format="color"/>
        <attr name="CallSliderView_Right_BackgroundColor" format="color"/>
        <attr name="CallSliderView_Right_Text" format="string"/>
    </declare-styleable>
</resources>
