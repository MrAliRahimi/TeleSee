<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:keepScreenOn="true">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ImageView
            android:id="@+id/imgBg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/img_follw" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/lin_gradient_bg_acitivity_call"
            android:orientation="vertical">
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:gravity="center"
            android:orientation="vertical">

            <com.example.ali.udpvideochat.sample.FontViews.TextViewCustomFont
                android:id="@+id/textCallerSurname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:textSize="22sp"
                app:fontName="IRANSansMobile_Medium" />

            <com.example.ali.udpvideochat.sample.FontViews.TextViewCustomFont
                android:id="@+id/textCallerIp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                app:fontName="IRANSansMobile_Light" />
        </LinearLayout>

        <com.example.ali.udpvideochat.sample.CircularImageView
            android:id="@+id/circularImageView2"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_centerInParent="true"
            android:src="@drawable/img_follw"
            app:civ_border="true"
            app:civ_border_color="#ffffff"
            app:civ_border_width="4dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/linBottom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/lin_solid_corner_color_bottom"
                android:gravity="top|center_horizontal"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/buttonToggleMic"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginRight="22dp"
                    android:layout_marginTop="40dp"
                    android:background="@drawable/lin_solid_activity_talk"
                    android:gravity="center"
                    android:orientation="vertical">

                    <com.example.ali.udpvideochat.sample.Font
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="&#xf2de;"
                        android:textColor="@color/isw_defaultBg"
                        android:textSize="20sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/buttonEndCall"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/lin_solid_adapter_offline"
                    android:gravity="center"
                    android:orientation="vertical">

                    <com.example.ali.udpvideochat.sample.Font
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="&#xf2b4;"
                        android:textColor="#ffffff"
                        android:textSize="38sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/buttonSpeaker"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="22dp"
                    android:layout_marginTop="40dp"
                    android:background="@drawable/lin_solid_activity_talk"
                    android:gravity="center"
                    android:orientation="vertical">

                    <com.example.ali.udpvideochat.sample.Font
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="&#xf2a8;"
                        android:textColor="@color/isw_defaultBg"
                        android:textSize="20sp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</FrameLayout>

